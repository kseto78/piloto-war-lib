<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:core="http://activemq.apache.org/schema/core"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://activemq.apache.org/schema/core http://activemq.org/config/1.0/1.0.xsd">
<!-- 	<import resource="classpath*:/es/minhap/plataformamensajeria/iop/services/springTest/spring-context.xml" />		 -->
	<import resource="classpath:/applicationContext-dbSIM.xml" />
	<import resource="classpath:/applicationContext-logic.xml" />
	<import resource="classpath:/applicationContext-aop.xml" />
	<import resource="classpath*:/jms-context-sim.xml" />
	<context:component-scan base-package="es.minhap.*" />
	<!-- ***************DEFINICION JOB enviarMensajeJob **************-->
	<bean name="enviarMensajeJob" class="es.redsara.misim.misim_bus_webapp.quartz.jobs.EnviarMensajeJob">
		<property name="maxMensajesLeer" value="${activemq.job.max.mensajes}" />
	</bean>
	<bean name="enviarMensajeJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="enviarMensajeJob" />
		<property name="targetMethod" value="execute" />
	</bean>

	<bean name="enviarMensajeTrigger"
		class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
		<property name="jobDetail" ref="enviarMensajeJobDetail" />
		<property name="startDelay" value="0" />
		<property name="repeatInterval" value="${activemq.job.intervalo}" />
	</bean>
	
	<!-- ***************DEFINICION JOB ReenviarMensajesPendientesJob **************-->
	<bean name="reenviarMensajesJob" class="es.redsara.misim.misim_bus_webapp.quartz.jobs.ReenviarMensajesPendientesJob">
		
	</bean>
	
	<bean name="reenviarMensajesJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="reenviarMensajesJob" />
		<property name="targetMethod" value="execute" />
		<property name="concurrent" value="${activemq.job.concurrencia.mensajesReenvio}" />
	</bean>
		
	<bean id="reenviarMensajesTrigger"  class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
	    <property name="jobDetail" ref="reenviarMensajesJobDetail" />
	    <property name="cronExpression" value="${activemq.job.cronReenvio}" />
	</bean>
	
	
	<!-- ***************DEFINICION JOB ReintentosGISSJob **************-->
	<bean name="reintentosGISSJob" class="es.redsara.misim.misim_bus_webapp.quartz.jobs.ReintentosGISSJob"/>
		
	<bean name="reintentosGISSJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="reintentosGISSJob" />
		<property name="targetMethod" value="execute" />
		<property name="concurrent" value="${activemq.job.concurrencia.mensajesReenvio}" />
	</bean>

	<bean id="reintentosGISSTrigger"  class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
	    <property name="jobDetail" ref="reintentosGISSJobDetail" />
	    <property name="cronExpression" value="${activemq.job.intervaloReintentosGISS}" />
	</bean>

	<!-- ***************DEFINICION JOB EliminarRegistroUsuarioMovilJob **************-->
	<bean name="eliminarRegistroUsuarioJob" class="es.redsara.misim.misim_bus_webapp.quartz.jobs.EliminarRegistroUsuarioMovilJob"/>
	
	<bean name="eliminarRegistroUsuarioJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="eliminarRegistroUsuarioJob" />
		<property name="targetMethod" value="execute" />
		<property name="concurrent" value="${eliminarRegistroUsuario.job.concurrencia}" />
	</bean>
		
	<bean id="eliminarRegistroUsuarioTrigger"  class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
	    <property name="jobDetail" ref="eliminarRegistroUsuarioJobDetail" />
	    <property name="cronExpression" value="${eliminarRegistroUsuario.job.cronReenvio}" />
	</bean>
	

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="jobDetails">
			<list>
				 <ref bean="enviarMensajeJobDetail" /> 
				 <ref bean="reenviarMensajesJobDetail" /> 
				 <ref bean="reintentosGISSJobDetail" /> 
				 <ref bean="eliminarRegistroUsuarioJobDetail" /> 
			</list>
		</property>

		<property name="triggers">
			<list>
				 <ref bean="enviarMensajeTrigger" /> 
				 <ref bean="reenviarMensajesTrigger" /> 
				 <ref bean="reintentosGISSTrigger" /> 
				  <ref bean="eliminarRegistroUsuarioTrigger" />   
 			</list>
		</property>
	</bean>
</beans>
