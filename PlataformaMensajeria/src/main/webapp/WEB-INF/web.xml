<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app id="WebApp_ID" version="2.5"
	xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd">
    
	<display-name>sim</display-name>
	
	<context-param>
		<param-name>applicationName</param-name>
		<param-value>PlataformaMensajeria</param-value>
    </context-param>
    
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
        	classpath:applicationContext.xml
            classpath:applicationContext-security.xml
        </param-value>
     </context-param>
    
    <context-param>
		<param-name>LOCALE</param-name>
		<param-value>es-ES</param-value>
    </context-param>
   
	 <!-- <context-param>
		<param-name>log4jFileName</param-name>
		<param-value>log4j.properties</param-value>
    </context-param>  -->
    
    
	<!-- Start Logon Session Interceptor -->
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
	 	<filter-class>es.mpr.plataformamensajeria.autentica.AutenticaAuthenticationFilter</filter-class> 
		 <!-- <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>  -->
	</filter>

	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping> 
	<!-- End Logon Session Interceptor -->

	<!-- Start Display Tag Filters -->
	<filter>
	    <filter-name>ResponseOverrideFilter</filter-name>
	    <filter-class>org.displaytag.filter.ResponseOverrideFilter</filter-class>
	    <init-param>
	        <param-name>buffer</param-name>
	        <param-value>true</param-value>
	    </init-param>
	</filter>
	
	<filter-mapping>
	    <filter-name>ResponseOverrideFilter</filter-name>
	    <url-pattern>*.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
	    <filter-name>ResponseOverrideFilter</filter-name>
	    <url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<!-- End Display Tag Filters -->

	<!--
	  - Publishes events for session creation and destruction through the application
	  - context. Optional unless concurrent session control is being used.
      -->
    <listener>
       <listener-class>org.springframework.security.web.session.HttpSessionEventPublisher</listener-class>
    </listener>

 	<!-- Start Struts -->
	<filter>
		<filter-name>struts2</filter-name>
		<!-- <filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class> -->
		<filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
	</filter>
    
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.css</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.js</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>

<!-- End Struts -->
 
  	<!-- Start Spring Context Loader -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
	
	<!-- End  Spring Context Loader -->

	<!--  Servlet que inicializa el pool de objetos -->
	<servlet>
        <servlet-name>servletPool</servlet-name>
        <servlet-class>es.mpr.template.pool.servletPool</servlet-class>
    	<load-on-startup>1</load-on-startup>
    </servlet>
	
<!-- JASPERREPORTS -->
    <servlet>
        <servlet-name>ImageServlet</servlet-name>
        <servlet-class>net.sf.jasperreports.j2ee.servlets.ImageServlet</servlet-class>
    </servlet>
<!-- FIN JASPERREPORTS -->

<!-- MAPEO DE SERVLETS -->	
	
	<!-- JASPERREPORTS -->
    <servlet-mapping>
        <servlet-name>ImageServlet</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>
	<!-- FIN JASPERREPORTS -->

	<!-- Servicios web CXF -->
	 <servlet>
        <servlet-name>cxf</servlet-name>
        <servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
        
    </servlet> 
    <servlet-mapping>
        <servlet-name>cxf</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>
    
	<welcome-file-list>
		<welcome-file>logon.jsp</welcome-file>
	</welcome-file-list> 
	
	<!-- *************************** -->
	<!-- INICIO QUARTZ               -->
	<!-- *************************** -->
  	 <servlet>  
		<servlet-name>QuartzInitializer</servlet-name> 
		<servlet-class>org.quartz.ee.servlet.QuartzInitializerServlet</servlet-class> 
	  	<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
     	<display-name>QuartzInicializarJobs</display-name>
     	<servlet-name>QuartzInicializarJobs</servlet-name>
     	<servlet-class>es.mpr.plataformamensajeria.quartz.QuartzInicializarJobs</servlet-class>
     	<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>QuartzInicializarJobs</servlet-name>
		<url-pattern>/QuartzInicializarJobs</url-pattern>
	</servlet-mapping> 
	<!-- FIN QUARTZ -->
	
	<!-- *************************** -->
	<!-- RECURSOS -->
	<!-- *************************** -->
	
	<servlet>
		<display-name>resources</display-name>
		<servlet-name>resources</servlet-name>
		<servlet-class>es.mpr.plataformamensajeria.servlet.DownloadFile</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>resources</servlet-name>
		<url-pattern>/resources/*</url-pattern>
	</servlet-mapping> 		
    <servlet>
	    <description></description>
	    <display-name>ServletSetEstadoProceso</display-name>
	    <servlet-name>ServletSetEstadoProceso</servlet-name>
	    <servlet-class>es.mpr.plataformamensajeria.servlet.ServletSetEstadoProceso</servlet-class>
  	</servlet>
    <servlet-mapping>
  	  <servlet-name>ServletSetEstadoProceso</servlet-name>
  	  <url-pattern>/setEstadoProceso</url-pattern>
 	</servlet-mapping>
	
</web-app>