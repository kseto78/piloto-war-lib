<?xml version="1.0"?>
<persistence 
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">

	<persistence-unit name="plataformamensajeriaapp" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<non-jta-data-source>java:dsOraclePlataforma</non-jta-data-source>
		<!--<class>es.mpr.template.model.configuracion.OrganismoJPA</class>-->
		<class>es.mpr.template.model.configuracion.UnidadOrganizacionalJPA</class>
		<class>com.map.j2ee.model.audit.AuditEntry</class>
		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.cache.use_second_level_cache"	value="false" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
		</properties>
	</persistence-unit>
	
</persistence>